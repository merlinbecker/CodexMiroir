{
  "name": "codex-miroir-fn",
  "version": "1.0.0",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@azure/storage-blob": "^12.18.0",
    "axios": "^1.6.0",
    "gray-matter": "^4.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "jest": "^30.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "codex/**/*.js",
      "static/**/*.js",
      "*.js",
      "!test.js",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test.js"
    ]
  }
}
