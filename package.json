{
  "name": "codexmiroir-functions",
  "version": "1.0.0",
  "type": "module",
  "main": "src/functions.js",
  "private": true,
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "deploy:sprocs": "node database/infra/deploy-sprocs.js"
  },
  "dependencies": {
    "@azure/cosmos": "^4.5.1",
    "@azure/functions": "^4.4.0",
    "@azure/storage-blob": "^12.28.0",
    "gray-matter": "^4.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "dotenv": "^17.2.3",
    "jest": "^30.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "codex/**/*.js",
      "static/**/*.js",
      "*.js",
      "!test.js",
      "!jest.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test.js"
    ]
  }
}
